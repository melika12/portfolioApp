            <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                <Button Clicked="Contact" Text="Contact me" TextTransform="None" FontAttributes="Bold"/>
            </StackLayout>

        </StackLayout>

    </StackLayout>
</ContentPage>
