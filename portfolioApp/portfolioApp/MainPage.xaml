        <StackLayout Orientation="Horizontal"  HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand">

            <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                <Button Clicked="Education" Text="Education" TextTransform="None" FontAttributes="Bold"/>
            </StackLayout>

            <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                <Button Clicked="About" Text="About me" TextTransform="None" FontAttributes="Bold"/>
            </StackLayout>

            <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                <Button Clicked="Experience" Text="Experience" TextTransform="None" FontAttributes="Bold"/>
