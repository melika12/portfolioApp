    <StackLayout>
        <Image Source="picture.jpg" HeightRequest="200"/>

        <Label Text="Melika Pedersen" HorizontalTextAlignment="Center" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="&lt;strong&gt;Phone:&lt;/strong&gt; 12 34 56 78&lt;br/&gt;&lt;strong&gt;Address:&lt;/strong&gt; Nonofyourbusiness street 69" TextType="Html" FontSize="16" Padding="30,0,30,0"/>

        <StackLayout Padding="30,0,30,0">
            <Label Text="Introducing me" FontSize="16" FontAttributes="Bold"/>
            <Label Text="I live in Monstropolis and is studying to become a data technician spezializing in programming at Mercantec.&lt;br/&gt;&lt;br/&gt;
